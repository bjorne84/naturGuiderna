@model IEnumerable<naturGuiderna.Models.Experience>

@{
    ViewData["Title"] = "Upplevelser";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="table">
                    <th>@Html.DisplayNameFor(model => model.PictureUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Ändra data</th>
                </trclass="table">
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-top" src="@item.PictureUrl" alt="@item.Name" style="max-width: 200px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a class="btn btn-outline-primary"><i class="badge-info bi-pencil-square">Redigera</i></a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye">Se info</i></a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash">Radera</i></a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>